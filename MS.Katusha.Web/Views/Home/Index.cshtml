@using MS.Katusha.Enumerations
@using MS.Katusha.Domain.Entities
@model MS.Katusha.Web.Models.PagedListModel<ProfileModel>
@{
    ViewBag.Title = "All Profiles";
    var action = ViewContext.RouteData.Values["Action"].ToString();
}
@if (!Request.IsAuthenticated) {
    
    <h1>@Html.ActionLink("Register for limited time.", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", data_dialog_title = "Registration" })</h1>
    <h3>This site is new, it will help you to find your dream.</h3>
    <br/>
} else {
    var profile = ViewBag.KatushaProfile;
    if(profile == null) {
        <h2>Create a new 
            <a class="btn btn-danger delete" href='@Url.Action("Create", "Profiles", new { key = "Girl" }, null)'>
                <span>Girl Profile</span>
            </a>
            <a class="btn btn-danger delete" href='@Url.Action("Create", "Profiles", new { key = "Man" }, null)'>
                <span>Man Profile</span>
            </a>
        </h2>
    }
    <hr />
    <h2>All Profiles ( @Model.Total ) </h2>
}    
<div id="gallery" data-toggle="modal-gallery" data-target="#modal-gallery">
@foreach (var profile in Model.List) {
    @Html.DisplayProfilePhoto(profile, PhotoType.Thumbnail, "gallery")
}
</div>
@if (Model.Total > Model.List.PageSize) {
    <hr style="clear: both"/>
    @Html.PagedListPager(Model.List, page => Url.Action(action, "Home", new { key = page }, null), PagedListRenderOptions.OnlyShowFivePagesAtATime)
}