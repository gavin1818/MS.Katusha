@using MS.Katusha.Enumerations
@using MS.Katusha.Web.Models.Entities.BaseEntities
@model MS.Katusha.Web.Models.PagedListModel<ProfileModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



       
@if (ViewBag.KatushaUser != null && !ViewBag.KatushaUser.EmailValidated)
{
        <h2>Please confirm your email first to create a profile!!! Resend @Html.ActionLink("Confirmation Mail", "SendConfirmationMail", "Home" )</h2>
} else if (ViewBag.KatushaUser != null && ViewBag.KatushaUser.Gender == 0) {
        <p>
            @Html.ActionLink("Create New", "Create" )
        </p>
}

    @foreach (var item in Model.List)
    {
    <span>
    <table>
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { key = Html.KeyFor(item) })<br />
                @Html.ActionLink("Details", "Details", new { key = Html.KeyFor(item) })<br />
                @Html.ActionLink("Delete", "Delete", new { key = Html.KeyFor(item) })<br />
                @Html.ActionLink("Photos", "Photos", new { key = Html.KeyFor(item) })<br />
            </td>
            <td>
                <table>
                    <tr><td>@Html.SmallPhoto(item.ProfilePhotoGuid, (item is BoyModel) ? Sex.Male : Sex.Female)</td></tr>
                    <tr><td>@Html.DisplayTextFor(_ => item.Name)  - (@(DateTime.Now.Year - item.BirthYear))</td></tr>
                    <tr><td>@Html.DisplayTextFor(_ => item.From)</td></tr>
                    <tr><td></td></tr>
                </table>
            
            </td>
        </tr>
    </table>
    </span>
    }




@Html.PagedListPager(Model.List, page => Url.Action("Index", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
