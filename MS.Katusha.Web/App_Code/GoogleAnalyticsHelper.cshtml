@using MS.Katusha.Services.Configuration
@using MS.Katusha.Web.Models

@helper InjectScript(GoogleAnalytics vars) {
    var settings = KatushaConfigurationManager.Instance.GetSettings();
    if (settings.NotTrackedIpsByGoogleAnalytics.IndexOf(settings.Ip, StringComparison.Ordinal) >= 0) { return; }
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-33763053-1']);
        _gaq.push(['_trackPageview']);
        @(vars)
        (function () {
            var ga = document.createElement('script');
            ga.type = 'text/javascript';
            ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(ga, s);
        })();
    </script>
}
